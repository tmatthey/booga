#include <iostream.h>
#include "booga/texture/ShaderStringValueNode.h"
     
ShaderStringValueNode::ShaderStringValueNode(RCString* theString)
{
  myValue = (*theString)(1, theString->length() - 1);
  delete theString;
  myBlockDepth = getCurrentBlockDepth();
}

void ShaderStringValueNode::print(bool indent)
{
  if (indent)
    printSpaces(2 * myBlockDepth);
  cout << myValue;
}

void ShaderStringValueNode::execute(Texture3DContext&)
{}

Value* ShaderStringValueNode::evaluate(Texture3DContext&)
{
  return new Value(myValue);
}
