include "booga/object/ObjectAttr.h"

specifier Primitive2D : public ObjectAttr

attr Precision
  member float
  argument Real
    constraint (value > -EPSILON)
    error "no negative value allowed"
  build ((value < 0) ? 0 : (float)value)
